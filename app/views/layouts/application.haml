%html{:xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang' => "en", :lang => "en"}
  %head
    %meta{ 'http-equiv' => "content-type", 'content' => "text/html;charset=UTF-8" }/
    %title
      Events: 
      = controller.action_name
    = stylesheet_link_tag 'scaffold','style'
    = GMap.header
    
  %body
    %div.header
      %p.notice
        = flash[:notice]
    
      -if logged_in?        
        #statment
          #logout_tab
            = link_to "Logout", logout_path          
          %p
            Welcome back
            %span= link_to current_user.login.capitalize + "!", user_path(current_user)
            .other_links
              (                      
              = link_to "View Profile", user_path(current_user), :class => "profile_link"
              |              
              = link_to "Settings", edit_user_path(current_user), :class => "settings_link "
              )
            
          
      -else
        #statment
          #logout_tab
            = link_to "Login", login_path
          #register_tab
            = link_to "Register", signup_path       
          
        
    %div.container
      = yield



