%h1.title Editing Event

-form_for(@event) do |f|
  =f.error_messages

  %p
    = f.label :name 
    %br/
    = f.text_field :name

  %p
    = f.label :description 
    %br/
    = f.text_area :description

  %p
    = f.label :location
    %br/
    = f.text_field :location

  %p
    = f.label :event_type
    %br/
    = f.text_field :event_type

  %p.date_select
    = f.label :event_date
    %br/
    = f.date_select(:event_date, :use_month_numbers => true, :order => [:month, :day, :year])
		
  %p
    = f.submit "Update"


= link_to 'Show', @event 
|
= link_to 'Back', events_path
