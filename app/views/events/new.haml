%h1
  =image_tag("date.png", :border=>0)
  New Event
  
.seperator_more

-form_for(@event, :class => "new_event") do |f|
  = f.error_messages

  %p
    = f.label :title
    %br/
    = f.text_field :name

  %p
    = f.label :category
    %br/    
    = f.text_field :event_type
    
  %p
    = f.label :website
    %br/    
    = f.text_field :website

  %p.date_select
    = f.label :start_date
    %br/
    = f.date_select(:event_date, :use_month_numbers => true, :order => [:month, :day, :year])
		
  %p.date_select
    = f.label :end_date
    %br/
    = f.date_select(:end_date, :use_month_numbers => true, :order => [:month, :day, :year])

  %p.description_container
    = f.label :description
    %br/
    = f.text_area :description, :size => "50x15"

  %p
    = f.label :location
    %br/
    = f.text_field :location
    
  %p
    = f.label :price
    %br/
    = f.text_field :price

  %p
    = f.submit "Create"



= link_to 'Back', events_path
